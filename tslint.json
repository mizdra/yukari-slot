{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-standard",
    "tslint-react"
  ],
  "rules": {
    "jsx-boolean-value": [true, "never"],
    "jsx-no-multiline-js": false,
    "ordered-imports": true,
    "indent": [true, "spaces", 2],
    "trailing-comma": [true, {"multiline": "always", "singleline": "never"}]
  }
}
